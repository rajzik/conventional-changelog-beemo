{
  "name": "@rajzik/conventional-changelog-beemo",
  "version": "2.0.1",
  "description": "Conventional changelog preset for Beemo and associated projects.",
  "keywords": [
    "conventional-changelog",
    "beemo",
    "preset"
  ],
  "main": "./index.js",
  "types": "./lib/index.d.ts",
  "engines": {
    "node": ">=8.9.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": "https://github.com/rajzik/conventional-changelog-beemo",
  "author": "Jan Silhan",
  "license": "MIT",
  "scripts": {
    "prepare": "lumos create-config --silent",
    "build": "lumos typescript",
    "coverage": "yarn run jest --coverage",
    "eslint": "lumos eslint",
    "jest": "lumos jest -i",
    "prettier": "lumos prettier",
    "release": "semantic-release",
    "type": "lumos typescript --noEmit",
    "prerelease": "yarn test && yarn run build",
    "pretest": "yarn run type",
    "test": "yarn run jest",
    "posttest": "yarn run eslint"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@rajzik/az-semantic-release-config": "^1.0.2",
    "@rajzik/config-babel": "^1.7.5",
    "@rajzik/config-eslint": "^1.6.12",
    "@rajzik/config-jest": "^1.6.1",
    "@rajzik/config-prettier": "^1.4.10",
    "@rajzik/config-typescript": "^1.4.8",
    "@rajzik/conventional-changelog-lint-config-beemo": "^1.0.1",
    "@rajzik/lumos": "^1.8.5",
    "@types/node": "^13.9.0",
    "@types/shelljs": "^0.8.6",
    "conventional-changelog-core": "^4.1.4",
    "conventional-recommended-bump": "^6.0.5",
    "husky": "^4.2.3",
    "semantic-release": "^17.0.4",
    "shelljs": "^0.8.3"
  },
  "lumos": {
    "drivers": [
      "babel",
      "eslint",
      "jest",
      "prettier",
      "typescript"
    ],
    "settings": {
      "node": true,
      "library": true
    }
  }
}
