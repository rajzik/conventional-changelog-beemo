{
  "name": "@rajzik/conventional-changelog-beemo",
  "version": "2.0.4",
  "description": "Conventional changelog preset for Beemo and associated projects.",
  "keywords": [
    "conventional-changelog",
    "beemo",
    "preset"
  ],
  "main": "./index.js",
  "types": "./lib/index.d.ts",
  "engines": {
    "node": ">=8.9.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": "https://github.com/rajzik/conventional-changelog-beemo",
  "author": "Jan Silhan",
  "license": "MIT",
  "scripts": {
    "prepare": "lumos create-config --silent",
    "build": "lumos typescript",
    "coverage": "yarn run jest --coverage",
    "eslint": "lumos eslint",
    "jest": "lumos jest -i",
    "prettier": "lumos prettier",
    "release": "semantic-release",
    "type": "lumos typescript --noEmit",
    "prerelease": "yarn test && yarn run build",
    "pretest": "yarn run type",
    "test": "yarn run jest",
    "posttest": "yarn run eslint"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.0.1",
    "@rajzik/az-semantic-release-config": "^1.0.6",
    "@rajzik/config-babel": "^1.11.24",
    "@rajzik/config-eslint": "^2.4.65",
    "@rajzik/config-jest": "^1.10.27",
    "@rajzik/config-prettier": "^1.6.30",
    "@rajzik/config-typescript": "^1.7.11",
    "@rajzik/conventional-changelog-lint-config-beemo": "^1.0.2",
    "@rajzik/lumos": "^3.0.91",
    "@types/node": "^14.0.19",
    "@types/shelljs": "^0.8.8",
    "conventional-changelog-core": "^4.1.7",
    "conventional-recommended-bump": "^6.0.9",
    "husky": "^4.2.5",
    "semantic-release": "^17.1.1",
    "shelljs": "^0.8.4"
  },
  "lumos": {
    "drivers": [
      "babel",
      "eslint",
      "jest",
      "prettier",
      "typescript"
    ],
    "settings": {
      "node": true,
      "library": true
    }
  }
}
